  <div class="col-xs-12 col-xs-offset-0 well well-lg">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Group Name</th>
          <th scope="col">Device Count</th>
          <th scope="col">Description</th>
          <th scope="col">Created by</th>
          <th scope="col">Created On</th>
          <th scope="col">Updated On</th>
        </tr>
      </thead>
      <tbody>
      <% obj.each do |group| %>
          <tr>
          <td><%= link_to group.name, group_path(group) %> </td>
          <td > 3 </td>
          <td><%= truncate(group.description, length:50) %></td>
          <td><%= group.user.username if group.user%></td>
          <td><%= group.created_at.to_date %></td>
          <td><%= group.updated_at.to_date %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>