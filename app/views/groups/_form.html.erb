<%= render 'shared/errors', obj: @group %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@group, :html=> {class:"form-horizontal", role:"form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name, "Group Name" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Name of Group", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, row: 10, class: "form-control", placeholder: "Description for Group" %>
      </div>
    </div>
    <div class="form-group">
      <div class="center col-sm-10">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <% end %>
    <div class="center col-xs-4">
      <%= link_to "Back to Group listing", groups_path %>
    </div>
  </div>
</div>