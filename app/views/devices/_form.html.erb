<%= render 'shared/errors', obj: @device %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@device, :html=> {class:"form-horizontal", role:"form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :devicetype, "Device Type" %>
      </div>
      <div class="col-sm-8">
        <%= f.select :devicetype, options_for_select(["Workstation", "Access Point", "Switch"]) %>

      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :group, "Device Group" %>
      </div>
      <div class="col-sm-8">
        <%= f.collection_select :group_id, Group.all, :id, :name %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name, "Device Name" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Device Name", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, row: 10, class: "form-control", placeholder: "Enter Device Description" %>
      </div>
    </div>
    <div class="form-group">
      <div class="center col-sm-10">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <% end %>
    <div class="center col-xs-4">
      <%= link_to "Back to Device listing", devices_path %>
    </div>
  </div>
</div>