 <% if logged_in? %>
  <div class="well col-xs-8 col-xs-offset-2">
    <h3 align="left"><strong>User Name:</strong> <%= @user.username %></h2>
    <h3 class="left"><strong>Email:</strong> <%= @user.email %> </h3>
    <div class="article-actions">
      <% if @user==current_user %>
        <%= link_to "Edit User", edit_user_path(@user), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete User", user_path(@user), method: :delete, 
                                            data: { confirm: "Are you sure you want to delete user?"}, 
                                            class: "btn btn-xs btn-danger" %>
        <% end %>
        <%= link_to "View all Users", users_path, class: "btn btn-xs btn-success" %>        
  </div>
    <%= render 'testsuites/testsuite', obj: @user_testsuites %>
    <%= will_paginate @user_testsuites %> 
</div>
<% end %>  
  
